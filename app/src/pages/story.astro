---
import { getCollection } from 'astro:content';

import Layout from '@layouts/Default.astro';
import Timeline from '@components/timeline/Double.astro';

const title = 'About Me';

const stories = (await getCollection('story')).sort(
	(a, b) => b.data.timestamp.valueOf() - a.data.timestamp.valueOf()
).map(s => ({ title: s.data.title, content: s.data.description }));
---

<Layout title={title}>
	<Timeline items={stories} />
</Layout>