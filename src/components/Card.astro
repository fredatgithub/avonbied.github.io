---
export interface Props {
	title?: string;
	// style?: CSSProperties;
	size?: 'small' | 'normal' | 'large';
}
const { title, size = 'normal' } = Astro.props;

const SIZES = {
	small: '24pt',
	normal: '36pt',
	large: '48pt',
}

let darkMode = {
	bgColor: '#000',
	textColor: '#fff',
	accentColor: '#d9d9d9'
};
let lightMode = {
	bgColor: '#fff',
	textColor: '#000',
	accentColor: '#212121'
};
---

<article class='card' style={{ marginBottom: '16px'}}>
	{title ? <header>
		<h3 class='cardTitle' style={{ fontSize: SIZES[size] }} ><span>{title ?? 'This is a Test Title'}</span></h3>
	</header> : null}
	<div class='cardContent'>
		<slot />
	</div>
</article>

<style lang="scss" define:vars={darkMode}>
.card {
	display: block;
	width: 80ch;
	padding: 16px 16px;
	border-radius: 8px;
	background-color: fade-out(var(--accentColor), 0.7) //rgba(21,21,21,0.7);
	box-shadow: 0 0 24px #fff;
}
.cardTitle, .cardContent {
	padding: 4px 16px;
}
.cardTitle {
	padding: 4px 16px;
	font-size: 48pt;
}
.cardTitle > span {
	border-bottom: 1px solid #fff;
}
.cardContent {
	padding: 4px 16px;
	max-height: 24vh;
	overflow: hidden;
}
</style>